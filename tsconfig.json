{
	"version": "2.3.2",
	"compilerOptions": {
		"baseUrl": "src/",
		"target": "es5",
		"module": "commonjs",
		"allowJs": true,
		"allowSyntheticDefaultImports": false,
		"importHelpers": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"types": [
			"webpack-env"
		],
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"removeComments": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"webpack",
        "views"
	],
	"files": [
		"index.d.ts"
	],
	"compileOnSave": false
}